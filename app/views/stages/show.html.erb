<p class="notice"><%= notice %></p>
<fieldset class="show-list">
	<legend>Stage</legend>
  	<table>
	    <tr>
      <th>Name:</th>
      <td><%= @stage.name %><td>
    </tr>

	    <tr>
      <th>Commitment:</th>
      <td><%= @stage.commitment_id %><td>
    </tr>

		</table>
</fieldset>
<div class="actions">
	<%= link_to 'Edit', edit_stage_path(@stage) %> |
	<%= link_to 'Back', stages_path %>
</div>
<div class="relations">
	<div id="related">
	  <div class="index-list">
    	<div class="actions">
        Scores
    	</div>

      <table>
        <tr class="list-header">
            <th>Assessor</th>
            <th>Assessed</th>
            <th>Score</th>
            <th>Category</th>
            <th>Status</th>
        </tr>

      <% @stage.scores.where(:status => "summary").each do |score| %>
        <tr>
            <td><%= score.assessor_id %></td>
            <td><%= score.assessed.name if score.assessed%></td>
            <td><%= score.score %></td>
            <td><%= score.assessor.assessment.category if !score.assessor_id.nil? %></td>
            <td><%= score.status %></td>
        </tr>
      <% end %>
      </table>
    </div>
    
	</div>
</div>
