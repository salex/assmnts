<p class="notice"><%= notice %></p>
<fieldset class="show-list">
	<legend>Person</legend>
  	<table>
	    <tr>
      <th>Name:</th>
      <td><%= @person.name %><td>
    </tr>

	    <tr>
      <th>Location:</th>
      <td><%= @person.location %><td>
    </tr>

	    <tr>
      <th>Status:</th>
      <td><%= @person.status %><td>
    </tr>

		</table>
</fieldset>
<div class="actions">
	<%= link_to 'Edit', edit_person_path(@person) %> |
	<%= link_to 'Back', people_path %>
</div>
<div class="relations">
	<div id="related">
    <div class="index-list">
    	<div class="actions">
        Scores
    	</div>

      <table>
        <tr class="list-header">
            <th>Assessor</th>
            <th>Assessed</th>
            <th>Score</th>
            <th>Category</th>
            <th>Status</th>
        </tr>

      <% @person.scores.each do |score| %>
        <tr>
            <td><%= score.assessor_id %></td>
            <td><%= score.assessed.name if score.assessed%></td>
            <td><%= score.score %></td>
            <td><%= score.assessor.assessment.category if !score.assessor_id.nil? %></td>
            <td><%= score.status %></td>
            <td>
        </tr>
      <% end %>
      </table>
    </div>
	  
	</div>
</div>
