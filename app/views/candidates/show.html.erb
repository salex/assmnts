<p class="notice"><%= notice %></p>
<fieldset class="show-list">
	<legend>Candidate</legend>
  	<table>
	    <tr>
      <th>Name:</th>
      <td><%= @candidate.name %><td>
    </tr>

	    <tr>
      <th>Stage:</th>
      <td><%= @candidate.stage_id %><td>
    </tr>

	    <tr>
      <th>Person:</th>
      <td><%= @candidate.person_id %><td>
    </tr>

	    <tr>
      <th>Score:</th>
      <td><%= @candidate.score %><td>
    </tr>

	    <tr>
      <th>Status:</th>
      <td><%= @candidate.status %><td>
    </tr>

		</table>
</fieldset>
<div class="actions">
	<%= link_to 'Edit', edit_candidate_path(@candidate) %> |
	<%= link_to 'Back', candidates_path %>
</div>
<div class="relations">
	<div id="related">
	  <div class="index-list">
    	<div class="actions">
        Scores
    	</div>

      <table>
        <tr class="list-header">
            <th>Assessor</th>
            <th>Assessed</th>
            <th>Score</th>
            <th>Category</th>
            <th>Status</th>
        </tr>

      <% @candidate.scores.each do |score| %>
        <tr>
            <td><%= score.assessor_id %></td>
            <td><%= score.assessed.name if score.assessed%></td>
            <td><%= score.score %></td>
            <td><%= score.assessor.assessment.category if !score.assessor_id.nil? %></td>
            <td><%= score.status %></td>
        </tr>
      <% end %>
      </table>
    </div>
	  
	</div>
</div>
