<h1>Listing candidates</h1>
<div class="index-list">
	<div class="actions">
    <%= link_to 'New Candidate', new_candidate_path %>
	</div>

  <table>
    <tr class="list-header">
        <th>Name</th>
        <th>Stage</th>
        <th>Person</th>
        <th>Score</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>

  <% @candidates.each do |candidate| %>
    <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.stage_id %></td>
        <td><%= candidate.person_id %></td>
        <td><%= candidate.score %></td>
        <td><%= candidate.status %></td>
        <td>
        <%= link_to 'Show', candidate %>
        <%= link_to 'Edit', edit_candidate_path(candidate) %>
        <%= link_to 'Destroy', candidate, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

